                    <ImageBrush ImageSource="/Assets/layout.jpg"></ImageBrush>
                </Grid.Background>
                <TextBlock HorizontalAlignment="Left" FontSize="40" Foreground="White" FontWeight="ExtraBlack" Margin="10,0,0,0" TextWrapping="Wrap" Text="How To Use" VerticalAlignment="Top" Height="67" Width="374"/>
                <Button Content="Search" Background="DarkOrange" FontSize="30" FontWeight="Bold" Name="SearchBtn" HorizontalAlignment="Left" Margin="10,122,0,0" VerticalAlignment="Top" Width="185" Height="108" Click="SearchBtn_Click" StylusButtonUp="SearchBtn_StylusButtonUp"/>
                <Button Content="My City" Name="MycityBtn" Background="RoyalBlue" FontSize="30" FontWeight="Bold" HorizontalAlignment="Left" Margin="234,122,0,0" VerticalAlignment="Top" Width="185" Height="108" StylusButtonUp="MycityBtn_StylusButtonUp" Click="MycityBtn_Click"/>
                <Button Content="Filter Now" Name="FilterBtn" Background="Indigo" FontSize="30" FontWeight="Bold"  HorizontalAlignment="Left" Margin="456,122,0,0" VerticalAlignment="Top" Width="185" Height="108"  StylusButtonUp="FilterBtn_StylusButtonUp" Click="FilterBtn_Click"/>
                <Button Content="Donate Organ" Name="DOBtn" Background="ForestGreen" FontSize="30" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,442,0,0" VerticalAlignment="Top" Width="287" Height="108" StylusButtonUp="DOBtn_StylusButtonUp" Click="DOBtn_Click"/>
                <Button Content="Donate Blood" Name="DBBtn" Background="Firebrick" FontSize="30" FontWeight="Bold" HorizontalAlignment="Left" Margin="354,442,0,0" VerticalAlignment="Top" Width="287" Height="108" Click="DBBtn_Click" StylusButtonUp="DBBtn_StylusButtonUp"/>
                <Button Content="Request Organ" Name="ROBtn" Background="LightSeaGreen" FontSize="30" FontWeight="Bold" HorizontalAlignment="Left" Margin="354,282,0,0" VerticalAlignment="Top" Width="287" Height="108" Click="ROBtn_Click" StylusButtonUp="ROBtn_StylusButtonUp"/>
                <Button Content="Request Blood" Name="RBBtn" Background="Crimson" FontSize="30" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,282,0,0" VerticalAlignment="Top" Width="287" Height="108" Click="RBBtn_Click" StylusButtonUp="RBBtn_StylusButtonUp"/>
                <Button Content="TimeLine" Name="TimelineBtn" Background="YellowGreen" FontSize="30" FontWeight="Bold" HorizontalAlignment="Left" Margin="10,606,0,0" VerticalAlignment="Top" Width="631" Height="108" Click="TimelineBtn_Click" StylusButtonUp="TimelineBtn_StylusButtonUp"/>

            </Grid>
